page { 
  background-color: #EFEFF4;
  font-family: -apple-system-font,Helvetica Neue,Helvetice,sans-serif;
}
.querySection{
display: flex;
flex-direction: column;
margin-top: 35px;
}
.help-text{
  font-size: 14pt;
  color: #888;
  margin-left: 15px;
}

.queryInput{
  width: 100%;
  background-color: #fff;
  height: 75px;
  margin:10px auto; 
}

.queryBtn{
  margin: 15px;
}
.items{
  display: flex;
  flex-wrap:wrap;
}
.item {
  margin:20px;
  background-color: #D2D2D2;
  padding: 13px;
  color:#FFFFFF;
  border-radius:20px;
}

